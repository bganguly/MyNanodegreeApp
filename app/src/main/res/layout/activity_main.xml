<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#BBDEFB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/app_title"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/textView" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#BBDEFB"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        tools:context=".MainActivity">

        <Button
            style="@style/ButtonStyles"
            android:text="@string/app_streamer_title"
            android:id="@+id/buttonView01"
            android:onClick="showMessage"/>

        <Button
            style="@style/ButtonStyles"
            android:text="@string/app_football_title"
            android:id="@+id/buttonView02"
            android:onClick="showMessage"/>

        <Button
            style="@style/ButtonStyles"
            android:text="@string/app_library_title"
            android:id="@+id/buttonView03"
            android:onClick="showMessage"/>

        <Button
            style="@style/ButtonStyles"
            android:text="@string/app_build_it_bigger_title"
            android:id="@+id/buttonView04"
            android:onClick="showMessage"/>

        <Button
            style="@style/ButtonStyles"
            android:text="@string/app_reader_title"
            android:id="@+id/buttonView05"
            android:onClick="showMessage"/>

        <Button
            style="@style/ButtonStyles.OrangeButtonStyles"
            android:text="@string/app_capstone_title"
            android:id="@+id/buttonView06"
            android:onClick="showMessage"/>

    </LinearLayout>

</LinearLayout>
